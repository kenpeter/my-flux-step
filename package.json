{
  "name": "flux-step-by-step",
  "version": "0.0.2",
  "description": "Flux step by step",
  "main": "js/app.js",
  "dependencies": {
    "keymaster": "~1.6.2",
    "react": "~0.12"
  },
  "devDependencies": {
    "browserify": "~8.1.1",
    "envify": "~3.2.0",
    "jest-cli": "~0.2.1",
    "reactify": "~1.0.0",
    "statics": "~0.1.0",
    "uglify-js": "~1.3.5",
    "watchify": "~2.2.1",
    "less": "~2.2.0"
  },
  "scripts": {
    "start": "STATIC_ROOT=./static watchify -o js/bundle.js -v -d .",
    "prestart": "STATIC_ROOT=./static lessc css/app.less > css/app.css",
    "build": "STATIC_ROOT=./static NODE_ENV=production browserify . | uglifyjs -cm > js/bundle.min.js",
    "collect-static": "collect-static . ./static",
    "test": "jest"
  },
  "author": "Nicola Paolucci",
  "license": "Apache 2",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
}
